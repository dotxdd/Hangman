<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LostGameFragment"
    android:background="@color/purple_700">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/outline_mood_bad_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hangAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hang  again"
        app:layout_constraintTop_toBottomOf="@+id/iv_image"
        app:layout_constraintLeft_toLeftOf="@+id/iv_image"
        app:layout_constraintRight_toRightOf="@+id/iv_image"
 />
    <TextView
        android:id="@+id/randomWordTextInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="This is your word: "
        app:layout_constraintTop_toBottomOf="@+id/hangAgainButton"
        app:layout_constraintLeft_toLeftOf="@+id/hangAgainButton"
        app:layout_constraintRight_toRightOf="@+id/hangAgainButton"/>
    <TextView
        android:id="@+id/randomWordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/randomWordTextInfo"
        app:layout_constraintLeft_toLeftOf="@+id/randomWordTextInfo"
        app:layout_constraintRight_toRightOf="@+id/randomWordTextInfo"/>

    <TextView
        android:id="@+id/randomWordTextHappy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Try again it costs nothing! "
        app:layout_constraintTop_toBottomOf="@+id/randomWordTextView"
        app:layout_constraintLeft_toLeftOf="@+id/randomWordTextView"
        app:layout_constraintRight_toRightOf="@+id/randomWordTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
